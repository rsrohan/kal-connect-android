<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".modules.dashboard.tabs.BuyMedicineScreen.ConfirmAddressAndPayActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/icon_menu_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Confirm and Pay"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Deliver to:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_mainAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Flat, House no., Building, Apartment"
            android:inputType="textPostalAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_mainAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Area, Colony, Street, Sector, Village"
            android:inputType="textPostalAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_mainAddress3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Landmark e.g. near Central Perk Cafe"
            android:inputType="textPostalAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Town/City"
            android:inputType="textCapWords"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="State/UT"
            android:inputType="textCapWords"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style2"
            android:hint="Pincode"
            android:inputType="number"
            android:padding="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/btn_rounded"
        android:backgroundTint="@color/appoinment_red"
        android:gravity="center"
        android:padding="12dp"
        android:text="Proceed to Pay"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>