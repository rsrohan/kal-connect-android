<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:text="Version"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/patient_profile_bg" />


                <LinearLayout
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/default_small_margin"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="25dp">

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="12dp"
                            android:src="@drawable/language_selection" />

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <TextView
                        android:id="@+id/fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Full Name"
                        android:textAppearance="@style/CustomFont.Bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/doctor_font_size" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Mobile Number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/default_margin"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="@dimen/card_elevation">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_profile" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/optionsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/optionEditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/media"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:id="@+id/imgTechStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="12dp"
                                    android:src="@drawable/icon_edit" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/changePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/rating_selected"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="12dp"
                                    android:src="@drawable/lock_white" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/locationUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:padding="5dp">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/colorPrimaryDark"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="12dp"

                                    android:src="@drawable/icon_location" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/optionLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/default_small_margin"
                                app:cardBackgroundColor="@color/black"
                                app:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="12dp"
                                    android:src="@drawable/icon_logout" />

                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profileInfoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout >